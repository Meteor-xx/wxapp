/**index.wxss**/

.user{
  display: flex;
  flex-direction:column;
  align-items: center;
  height: 100%;
  width:100%;
  position: absolute;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.userinfo-nickname {
  color: #000;
  display:block;
  width: 280rpx;
  font-size:40rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  text-align:center;
}
.background1{
  background-color: rgb(0, 194, 253);
  width: 100%;
  height: 130px;
}
.block1{
  margin-left: 10px;
  margin-right: 10px;
  height: 100px;
  border-top: 30px solid rgb(0, 131, 253);
  background-color: #F8F8F8;
  border-bottom-left-radius: 30px;
}
.container {
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30px;
  box-sizing: border-box;
  background-color: #00aeff
} 
