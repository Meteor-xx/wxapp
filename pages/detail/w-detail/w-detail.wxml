<!--pages/w-detail/w-detail.wxml-->
<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>车辆告警</view>
    <view class='page__desc'>告警时间:{{list.alarmTime}}</view>
  </view>

  <view class='page__bd'>
    <view class='weui-cells__title'>详细信息</view>

    <view class='weui-cells weui-cells_after-title'>
      <view class='weui-cell'>
        <view class='weui-cell__bd'>运营单位</view>
        <view class='weui-cell__ft'style='font-size:35rpx'>{{company}}</view>
      </view>
      <view class='weui-cell'>
        <view class='weui-cell__bd'>车牌号</view>
        <view class='weui-cell__ft'style='font-size:35rpx'>{{list.plateNumber}}</view>
      </view>
      <view class='weui-cell'>
        <view class='weui-cell__bd'>设备号</view>
        <view class='weui-cell__ft'style='font-size:35rpx'>{{deviceId}}</view>
      </view>
      <view class='weui-cell'>
        <view class='weui-cell__bd'>告警位置</view>
        <view class='weui-cell__ft' style='font-size:35rpx'>{{list.startGpsLocation.addressText}}</view>
      </view>
    </view>

    <view class='big-cell'>
        <text style='font-size:50rpx'>告警信息</text>
        <view style='font-size:35rpx;text-align:center;color:#999'>{{list.alarmName}}</view>
      </view>
  </view>
</view>
